{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["vitest"],
    "paths": {
      "@common/*": ["../../packages/common/src/*"],
      "@backend/*": ["./src/*"]
    }
  },
 

  "include": ["src", "../../packages/common/src"]
}

